<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "Y3GLJ2DQLW.org.coolestproject.CoolestProjApp"
        version     = "1.0.0"
        versionCode = "100">
    <name>Coolest Projects</name>

    <description>
      Mobile Application for the CoolestProjects 2013
    </description>

    <author href="http://coolestprojects.org/" email="coolestprojects@coderdojodcu.com">
      CoolestProjects.Org
    </author>

    <gap:plugin name="com.phonegap.plugins.barcodescanner" />

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version"           value="2.9.0" />
    <preference name="orientation"                value="portrait" />
    <preference name="target-device"              value="universal" />
    <preference name="fullscreen"                 value="false" />
    <preference name="webviewbounce"              value="false" />
    <preference name="prerendered-icon"           value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="android-minSdkVersion"      value="5" />
    <preference name="load-url-timeout"           value="10000" />

    <icon src="img/icons/icon.png" />
    <icon src="img/icons/icon-36.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="img/icons/icon-48.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="img/icons/icon-72.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="img/icons/icon-96.png"   gap:platform="android"    gap:density="xhdpi" />

    <access origin="*" />

    <gap:splash src="img/screens/screen-200-320.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/screens/screen-320x480.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/screens/screen-480x800.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/screens/screen-720x1280.png" gap:platform="android" gap:density="xhdpi" />
</widget>
